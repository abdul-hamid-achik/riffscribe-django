# Django Configuration
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://riffscribe:riffscribe_dev@db:5432/riffscribe

# Redis & Celery Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Storage Configuration (S3/MinIO)
USE_S3=true
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_STORAGE_BUCKET_NAME=riffscribe-media
AWS_S3_ENDPOINT_URL=http://storage:9000
AWS_S3_USE_SSL=false
AWS_S3_VERIFY=false
AWS_S3_CUSTOM_DOMAIN=

# ML Model Configuration
USE_GPU=false
DEMUCS_MODEL=htdemucs_ft
BASIC_PITCH_MODEL=default
MAX_AUDIO_LENGTH=600

# Whisper AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
USE_WHISPER=true
WHISPER_MODEL=whisper-1
WHISPER_LANGUAGE=
WHISPER_TEMPERATURE=0.0
WHISPER_ENABLE_CHORD_DETECTION=true
WHISPER_MAX_RETRIES=3
WHISPER_TIMEOUT=60

# Multi-track Processing
ENABLE_MULTITRACK=true

# OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Email Configuration (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password_here
DEFAULT_FROM_EMAIL=noreply@riffscribe.com
